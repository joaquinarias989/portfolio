---
import NavHeader from '../components/NavHeader.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='es-ar' class='md:px-10'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class='container xl:max-w-7xl min-h-screen overflow-x-hidden mx-auto border-2 border-black bg-gray-50 text-black'
  >
    <NavHeader />
    <slot />
    <!-- <Footer /> -->
  </body>
</html>
<style is:global>
  @font-face {
    font-family: 'GoshaSans';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url('/fonts/GoshaSansRegular.woff2') format('woff2');
  }
  @font-face {
    font-family: 'GoshaSansBold';
    font-style: normal;
    font-weight: 600;
    font-display: swap;
    src: url('/fonts/GoshaSansBold.woff2') format('woff2');
  }
  * {
    font-family: 'GoshaSans', system-ui, -apple-system, BlinkMacSystemFont,
      'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans',
      'Helvetica Neue', sans-serif;
  }
</style>
