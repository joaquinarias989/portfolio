---
export interface Props {
  width?: number;
  height?: number;
  strokeWidth?: number;
  classes?: string;
}

const { width, height, strokeWidth, classes } = Astro.props;
---

<svg
  xmlns='http://www.w3.org/2000/svg'
  fill='none'
  viewBox='0 0 24 24'
  stroke-width={strokeWidth || 1.5}
  stroke='currentColor'
  class={`w-${width || 8} h-${height || 8} ${classes}`}
>
  <path
    stroke-linecap='round'
    stroke-linejoin='round'
    d='M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
  ></path>
</svg>
